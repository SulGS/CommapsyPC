<UserControl x:Class="CommapsyPC.Controls.PlaceRequestButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommapsyPC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Name="background" Grid.RowSpan="2" Background="#903749" CornerRadius="40" Margin="10"/>

        <Label Name="placeName" Content="Titulo" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="10"/>

        <Label Name="userName" Grid.Row="1" Content="Categoria" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Margin="10"/>

        <Button Name="Click" Grid.RowSpan="2" Height="50" Margin="15,0" Background="Transparent" BorderBrush="Transparent" Click="Click_Click"/>

    </Grid>
</UserControl>
