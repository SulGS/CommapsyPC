<UserControl x:Class="CommapsyPC.Controls.ModControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommapsyPC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Name="background" Grid.RowSpan="3" Background="#903749" CornerRadius="40" Margin="10"/>

        <Label Name="Mail" Content="Correo de ejemplo" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center" FontSize="10"/>

        <Button Name="action" Click="action_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Content="XD" Grid.Row="1" Margin="50,0" Background="#E84545"/>


    </Grid>
</UserControl>
