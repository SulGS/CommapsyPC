<UserControl x:Class="CommapsyPC.Controls.OpinionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommapsyPC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Name="background" Grid.RowSpan="2" Background="#903749" CornerRadius="40" Margin="10" Width="450"/>
        
        <Label Name="rating" Grid.Row="0" Content="Categoria" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25"/>

        <Label Name="comment" Grid.Row="1" Content="Categoria" FontSize="14" Margin="20,20"/>

        
    </Grid>
</UserControl>
